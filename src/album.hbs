<section aria-label="{{ aria-label }}" class="lg:p-0">
  <img alt="{{ img-alt }}"
       src="{{ img-src }}"
       class="object-fit shadow-xl">
  <div>
    <h3 class="text-white font-display my-8 text-lg w-full lg:w-2/5 uppercase">{{ title }}</h3>
    <div class="text-white font-body w-full lg:w-4/5 mb-8">
      {{ body }}
    </div>
    <a href="{{ href }}" target="_blank" class="inline-block rounded font-display text-white ring-1 ring-white p-4 hover:bg-white hover:bg-opacity-10">
      Listen now
    </a>
  </div>
</section>
